{
  "name": "livespec",
  "version": "1.0.1",
  "packageManager": "bun@1.3.4",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.3.3",
    "husky": "9.1.7",
    "typescript": "5.9.3"
  },
  "bin": {
    "livespec": "./dist/bin.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "description": "Living specification management for AI-native development",
  "keywords": [
    "specs",
    "ai",
    "claude",
    "gpt",
    "windsurf",
    "copilot",
    "openspec",
    "github",
    "sync",
    "spec",
    "specifications",
    "documentation"
  ],
  "license": "MIT",
  "scripts": {
    "start": "bun ./src/bin.ts",
    "build": "tsc",
    "lint": "bunx biome check --write --unsafe . --error-on-warnings",
    "ts": "bun tsc --noEmit",
    "ok": "bun ts && bun lint && bun test",
    "prepare": "husky",
    "prepublishOnly": "bun run build",
    "pre-commit": "bun ok"
  },
  "type": "module",
  "dependencies": {
    "@clack/prompts": "0.11.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
