{
	"name": "livespec",
	"version": "1.0.6",
	"description": "Living specification management for AI-native development",
	"repository": {
		"url": "https://github.com/ftzi/livespec"
	},
	"type": "module",
	"scripts": {
		"build": "tsc",
		"mermaid": "mmdc -i assets/building-features.mmd -o assets/building-features.svg -b transparent && mmdc -i assets/livespec-sync.mmd -o assets/livespec-sync.svg -b transparent",
		"lint": "bunx biome check --write --unsafe . --error-on-warnings",
		"ok": "bun ts && bun lint && bun test",
		"pre-commit": "bun run mermaid && bun ok && git add -u",
		"prepare": "husky",
		"prepublishOnly": "bun run build",
		"start": "bun ./src/bin.ts",
		"ts": "bun tsc --noEmit"
	},
	"bin": {
		"livespec": "dist/bin.js"
	},
	"files": [
		"dist",
		"templates"
	],
	"dependencies": {
		"@clack/prompts": "0.11.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@mermaid-js/mermaid-cli": "11.12.0",
		"@types/bun": "1.3.3",
		"husky": "9.1.7",
		"typescript": "5.9.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"packageManager": "bun@1.3.4",
	"keywords": [
		"ai",
		"claude",
		"copilot",
		"documentation",
		"github",
		"gpt",
		"openspec",
		"spec",
		"specifications",
		"specs",
		"sync",
		"windsurf"
	]
}
