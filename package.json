		"ok": "bun ts && bun lint && bun test",
		"prepare": "husky",
		"pre-commit": "bun ok"
	},
	"type": "module",
	"dependencies": {
		"@clack/prompts": "0.11.0"
	},
	"publishConfig": {
		"access": "public"
