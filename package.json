{
	"name": "@ftzi/livespec",
	"version": "1.0.0",
	"packageManager": "bun@1.3.4",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "^1.3.3",
		"husky": "^9.1.7",
		"typescript": "^5.9.3"
	},
	"bin": {
		"livespec": "./src/bin.ts"
	},
	"description": "Living specification management for AI-native development",
	"keywords": [
		"livespec",
		"specs",
		"ai",
		"claude",
		"gpt",
		"windsurf",
		"copilot",
		"github",
		"sync",
		"spec",
		"specifications",
		"documentation"
	],
	"license": "MIT",
	"scripts": {
		"start": "bun ./src/bin.ts",
		"lint": "bunx biome check --write --unsafe . --error-on-warnings",
